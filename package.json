{
  "name": "demoproject",
  "version": "1.0.1",
  "description": "auth project",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint -c .eslintrc.js ./server/**/*.js",
    "fix-lint": "eslint -c .eslintrc.js ./server/**/*.js --fix",
    "format": "prettier --write \"server/**/*.js\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saniok017/demoproject.git"
  },
  "author": "saniok",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saniok017/demoproject/issues"
  },
  "homepage": "https://github.com/saniok017/demoproject#readme",
  "dependencies": {
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "isomorphic-unfetch": "^3.0.0",
    "mongoose": "^5.5.4",
    "passport": "^0.4.0",
    "passport-telegram": "^1.0.0",
    "eslint": "^5.0.0"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.18.11",
    "prettier": "^1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint -c .eslintrc.js --fix",
        "prettier --write",
        "git add"
      ]
    }
  }
}
